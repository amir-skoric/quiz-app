<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../public/css/pico.min.css">
    <title>Account</title>
  </head>
  <body>
    <main class="container">
        {{> header}}
        <hgroup>
          <h1>Change your account details here ğŸ˜‰</h1>
          <h2>Account Details</h2>
        </hgroup>
        <form action="/updateUser" method="POST">
            <label for="username">Username</label>
                <input type="text" name="username" value="{{ user }}" required>
            <label for="email">E-mail</label>
                <input type="email" name="email" value="{{ email }}" required>
            <label for="password">Password</label>
                <input type="password" name="password" minlength="8" required>
            <input type="submit" value="Update" />
        </form>
        <form action="/deleteUser" method="POST">
          <input type="submit" value="Delete Account" style="background-color: rgb(255, 29, 29); border: none;">
        </form>
    </main>
  </body>
</html>